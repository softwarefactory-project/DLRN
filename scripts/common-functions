#!/bin/bash -xe

# Function to run at the end of each rpm build (success and failure)
# Files produced on the volume need to have their ownership changed from root.
function finalize(){
    chown -R $USER_ID:$GROUP_ID /data/$PROJECT_NAME /data/${PROJECT_NAME}_distro $OUTPUT_DIRECTORY
}

# Function that selects package manager to be used
function yum-compat(){
    # check if dnf is default package manager
    if command -v dnf &>0; then
        YUM=dnf
    else
        YUM=yum
    fi
    eval $YUM $@
}

function yum-builddep-compat(){
    # check if dnf is default package manager
    if command -v dnf &>0; then
        YUMBUILDDEP="dnf builddep"
    else
        YUMBUILDDEP=yum-builddep
    fi
    eval $YUMBUILDDEP $@
}
