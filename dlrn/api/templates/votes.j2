<!DOCTYPE html>
<html lang="en">
  <head>
    <title>CI Votes</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css')}}">
  </head>
  <body>
    <h1>
      <i class='fa fa-chevron-circle-right pull-left'></i>
      {{ target | capitalize }}
    </h1>
    <table id="dlrn">
      <tr>
        <th>CI Name</th>
        <th>Results URL</th>
        <th>Vote</th>
        <th>In Progress?</th>
        <th>Timestamp</th>
        <th>notes</th>
      </tr>
      {% for vote in votes %}
        <tr {% if vote.ci_vote == True %}class="success"{% endif %}>
          <td>{{ vote.ci_name }}</td>
          <td>
            <i class="fa fa-link pull-left"></i>
            <i>
              <a href="{{ vote.ci_url }}">
                {{ vote.ci_url }}
              </a>
          </td>
          <td>
            {% if vote.ci_vote  %}
              <i class="fa fa-link pull-left" style="color:#004153"></i>SUCCESS
            {% else %}
              <i class="fa fa-link pull-left" style="color:red"></i>FAILED
            {% endif %}
          </td>
          <td>
            {% if vote.ci_in_progress  %}
              <i class="fa fa-link pull-left" style="color:red"></i>IN PROGRESS
            {% else %}
              <i class="fa fa-link pull-left" style="color:#004153"></i>FINISHED
            {% endif %}
          </td>
          <td>{{ vote.timestamp | strftime }}</td>
          <td>{{ vote.notes }}</td>
        </tr>
      {% endfor %}
    </table>
  </body>
</html>
